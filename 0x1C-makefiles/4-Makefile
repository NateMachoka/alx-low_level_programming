CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o {NAME}

#compiles source files into object files
%.o:%.c
	${CC} ${CFLAGS} -c $< -o $@

clean:
	${RM} ${NAME} *~

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re:fclean all
